{
  "schemaVersion": "1.0.0",
  "meta": {
    "exportedAt": "2025-02-07T15:00:00+00:00",
    "exportedBy": "EIPSI Soul",
    "pluginVersion": "1.2.2",
    "formTitle": "Evaluación Integral de Estrés y Bienestar",
    "formName": "estres_bienestar_profesionales",
    "_comment": "Plantilla profesional diseñada para la evaluación de salud mental en personal sanitario."
  },
  "form": {
    "title": "Evaluación Integral de Estrés y Bienestar",
    "formId": "estres_bienestar_profesionales",
    "blocks": [
      {
        "blockName": "eipsi/form-container",
        "attrs": {
          "formId": "estres_bienestar_profesionales",
          "presetName": "Clinical Blue",
          "primaryColor": "#005a87",
          "useCustomCompletion": true,
          "completionTitle": "Evaluación Completada",
          "completionMessage": "Muchas gracias por tu participación. Tus respuestas han sido registradas para el estudio de bienestar profesional.",
          "completionButtonLabel": "Volver al inicio"
        },
        "innerBlocks": [
          {
            "blockName": "eipsi/form-page",
            "attrs": { "pageIndex": 1, "title": "Consentimiento Informado" },
            "innerBlocks": [
              {
                "blockName": "eipsi/consent-block",
                "attrs": {
                  "consentText": "Este estudio tiene como objetivo evaluar el impacto del estrés en profesionales sanitarios. La participación es voluntaria y anónima. Los datos serán tratados con fines de investigación clínica únicamente de acuerdo a la normativa vigente de protección de datos.",
                  "consentLabel": "He leído y acepto participar voluntariamente en este estudio",
                  "isRequired": true
                }
              }
            ]
          },
          {
            "blockName": "eipsi/form-page",
            "attrs": { "pageIndex": 2, "title": "Datos Demográficos" },
            "innerBlocks": [
              {
                "blockName": "eipsi/campo-texto",
                "attrs": { "fieldName": "nombre", "label": "Nombre (opcional)", "required": false, "placeholder": "Tu nombre o iniciales" }
              },
              {
                "blockName": "eipsi/campo-texto",
                "attrs": { "fieldName": "edad", "label": "Edad", "required": true, "fieldType": "number", "placeholder": "Ej: 35" }
              },
              {
                "blockName": "eipsi/campo-radio",
                "attrs": { 
                  "fieldName": "genero", 
                  "label": "Género", 
                  "required": true,
                  "options": "Femenino;Masculino;No binario;Prefiero no decir" 
                }
              },
              {
                "blockName": "eipsi/campo-select",
                "attrs": { 
                  "fieldName": "profesion", 
                  "label": "Profesión", 
                  "required": true,
                  "options": "Psicología Clínica;Psiquiatría;Medicina General;Enfermería;Trabajo Social;Otra especialidad" 
                }
              },
              {
                "blockName": "eipsi/campo-select",
                "attrs": { 
                  "fieldName": "experiencia", 
                  "label": "Años de experiencia profesional", 
                  "required": true,
                  "options": "0-2 años;3-5 años;6-10 años;11-20 años;Más de 20 años" 
                }
              },
              {
                "blockName": "eipsi/campo-texto",
                "attrs": { "fieldName": "hospital", "label": "Sector, Hospital o Centro de Salud actual", "required": true }
              }
            ]
          },
          {
            "blockName": "eipsi/form-page",
            "attrs": { "pageIndex": 3, "title": "Nivel de Estrés y Bienestar (VAS)" },
            "innerBlocks": [
              {
                "blockName": "eipsi/campo-descripcion",
                "attrs": { 
                  "label": "Instrucciones", 
                  "helperText": "Desliza el marcador en las siguientes escalas según cómo te sientas en este momento." 
                }
              },
              {
                "blockName": "eipsi/vas-slider",
                "attrs": { 
                  "fieldName": "nivel_estres", 
                  "label": "¿Cuál es tu nivel actual de estrés percibido?", 
                  "labels": "Nada;Leve;Moderado;Severo;Crítico",
                  "minValue": 0,
                  "maxValue": 100,
                  "required": true,
                  "helperText": "Considera tu carga laboral y emocional reciente."
                }
              },
              {
                "blockName": "eipsi/vas-slider",
                "attrs": { 
                  "fieldName": "nivel_bienestar", 
                  "label": "¿Cómo calificarías tu nivel de bienestar general?", 
                  "labels": "Muy bajo;Bajo;Neutral;Alto;Muy alto",
                  "minValue": 0,
                  "maxValue": 100,
                  "required": true
                }
              }
            ]
          },
          {
            "blockName": "eipsi/form-page",
            "attrs": { "pageIndex": 4, "title": "Síntomas Recientes" },
            "innerBlocks": [
              {
                "blockName": "eipsi/campo-descripcion",
                "attrs": { "label": "Evaluación de Síntomas", "helperText": "Durante las últimas dos semanas, ¿con qué frecuencia has experimentado lo siguiente?" }
              },
              {
                "blockName": "eipsi/campo-likert",
                "attrs": { "fieldName": "sintoma_ansiedad", "label": "1. Sensación de ansiedad o nerviosismo", "labels": "Nunca;Raramente;Ocasionalmente;Frecuentemente;Siempre", "minValue": 1, "maxValue": 5, "required": true }
              },
              {
                "blockName": "eipsi/campo-likert",
                "attrs": { "fieldName": "sintoma_insomnio", "label": "2. Dificultad para conciliar o mantener el sueño", "labels": "Nunca;Raramente;Ocasionalmente;Frecuentemente;Siempre", "minValue": 1, "maxValue": 5, "required": true }
              },
              {
                "blockName": "eipsi/campo-likert",
                "attrs": { "fieldName": "sintoma_irritabilidad", "label": "3. Irritabilidad o cambios bruscos de humor", "labels": "Nunca;Raramente;Ocasionalmente;Frecuentemente;Siempre", "minValue": 1, "maxValue": 5, "required": true }
              },
              {
                "blockName": "eipsi/campo-likert",
                "attrs": { "fieldName": "sintoma_concentracion", "label": "4. Dificultad para concentrarse en tareas cotidianas", "labels": "Nunca;Raramente;Ocasionalmente;Frecuentemente;Siempre", "minValue": 1, "maxValue": 5, "required": true }
              },
              {
                "blockName": "eipsi/campo-likert",
                "attrs": { "fieldName": "sintoma_agotamiento", "label": "5. Sensación de agotamiento emocional o vacío", "labels": "Nunca;Raramente;Ocasionalmente;Frecuentemente;Siempre", "minValue": 1, "maxValue": 5, "required": true }
              },
              {
                "blockName": "eipsi/campo-likert",
                "attrs": { "fieldName": "sintoma_abrumado", "label": "6. Sentirse superado/a por las demandas laborales", "labels": "Nunca;Raramente;Ocasionalmente;Frecuentemente;Siempre", "minValue": 1, "maxValue": 5, "required": true }
              }
            ]
          },
          {
            "blockName": "eipsi/form-page",
            "attrs": { "pageIndex": 5, "title": "Factores de Riesgo Laboral" },
            "innerBlocks": [
              {
                "blockName": "eipsi/campo-multiple",
                "attrs": { 
                  "fieldName": "factores_riesgo", 
                  "label": "¿Cuáles de los siguientes factores te afectan actualmente en tu entorno laboral? (Puedes marcar varios)", 
                  "options": "Excesiva carga de trabajo;Conflictos interpersonales con colegas;Falta de apoyo administrativo;Presión de los pacientes o sus familiares;Inestabilidad laboral;Dificultad para conciliar vida familiar;Falta de recursos materiales o personal",
                  "required": true
                }
              },
              {
                "blockName": "eipsi/campo-textarea",
                "attrs": { 
                  "fieldName": "estresores_especificos", 
                  "label": "¿Hay algún otro factor específico que te esté generando estrés en este momento?", 
                  "placeholder": "Describe brevemente si lo deseas...",
                  "required": false
                }
              }
            ]
          },
          {
            "blockName": "eipsi/form-page",
            "attrs": { "pageIndex": 6, "title": "Autocuidado y Apoyo" },
            "innerBlocks": [
              {
                "blockName": "eipsi/campo-multiple",
                "attrs": { 
                  "fieldName": "autocuidado", 
                  "label": "¿Cuáles de estas prácticas realizas regularmente para gestionar tu bienestar?", 
                  "options": "Ejercicio físico regular;Prácticas de Meditación o Mindfulness;Terapia psicológica individual/grupal;Hobbies y tiempo recreativo no laboral;Asegurar un descanso reparador;Socialización activa con amigos/familia;Establecer límites claros entre trabajo y hogar",
                  "required": false
                }
              },
              {
                "blockName": "eipsi/vas-slider",
                "attrs": { 
                  "fieldName": "apoyo_institucional", 
                  "label": "¿Sientes que cuentas con apoyo institucional o de tu organización para tu bienestar emocional?", 
                  "labels": "Nada;Poco;Moderado;Bastante;Total",
                  "minValue": 0,
                  "maxValue": 100,
                  "helperText": "Escala de percepción de soporte organizacional."
                }
              }
            ]
          },
          {
            "blockName": "eipsi/form-page",
            "attrs": { "pageIndex": 7, "title": "Información de Contacto" },
            "innerBlocks": [
              {
                "blockName": "eipsi/campo-descripcion",
                "attrs": { "label": "Opcional", "helperText": "Si deseas recibir un resumen de tus respuestas o participar en futuras fases del estudio, completa los siguientes datos." }
              },
              {
                "blockName": "eipsi/campo-texto",
                "attrs": { 
                  "fieldName": "email", 
                  "label": "Correo electrónico", 
                  "fieldType": "email",
                  "placeholder": "ejemplo@correo.com"
                }
              },
              {
                "blockName": "eipsi/campo-texto",
                "attrs": { "fieldName": "telefono", "label": "Teléfono de contacto (opcional)", "placeholder": "+54..." }
              },
              {
                "blockName": "eipsi/campo-select",
                "attrs": { 
                  "fieldName": "seguimiento", 
                  "label": "¿Estarías dispuesto/a a participar en una breve entrevista de seguimiento anónima?", 
                  "options": "Sí;No;Tal vez en el futuro",
                  "required": false
                }
              }
            ]
          }
        ]
      }
    ]
  },
  "metadata": {
    "_eipsi_form_name": "estres_bienestar_profesionales"
  }
}
