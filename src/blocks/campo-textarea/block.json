{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "eipsi/campo-textarea",
  "title": "EIPSI Campo Textarea",
  "category": "eipsi-forms",
  "icon": "editor-alignleft",
  "description": "Campo de área de texto multilínea configurable para formularios EIPSI.",
  "keywords": ["form", "field", "textarea", "multilínea", "eipsi"],
  "textdomain": "eipsi-forms",
  "parent": ["eipsi/form-container", "eipsi/form-page"],
  "editorScript": "file:./index.js",
  "editorStyle": "file:./editor.scss",
  "style": "file:./style.scss",
  "supports": {
    "html": false,
    "spacing": {
      "margin": true,
      "padding": true
    }
  },
  "attributes": {
    "fieldName": {
      "type": "string",
      "default": ""
    },
    "label": {
      "type": "string",
      "default": ""
    },
    "required": {
      "type": "boolean",
      "default": false
    },
    "placeholder": {
      "type": "string",
      "default": ""
    },
    "helperText": {
      "type": "string",
      "default": ""
    },
    "rows": {
      "type": "number",
      "default": 4
    },
    "minLength": {
      "type": "number",
      "default": 0
    },
    "maxLength": {
      "type": "number",
      "default": 1000
    },
    "className": {
      "type": "string",
      "default": ""
    }
  },
  "example": {
    "attributes": {
      "fieldName": "description",
      "label": "Descripción",
      "required": true,
      "placeholder": "Escribí una descripción detallada...",
      "helperText": "Mínimo 50 caracteres, máximo 1000.",
      "rows": 6,
      "minLength": 50,
      "maxLength": 1000
    }
  }
}
