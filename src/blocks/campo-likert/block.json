{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "eipsi/campo-likert",
    "title": "EIPSI Campo Likert",
    "category": "eipsi-forms",
    "icon": "star-half",
    "description": "Escala Likert configurable para evaluaciones y encuestas clínicas EIPSI.",
    "keywords": [ "form", "field", "likert", "scale", "rating", "eipsi" ],
    "textdomain": "eipsi-forms",
    "parent": [ "eipsi/form-container", "eipsi/form-page" ],
    "editorScript": "file:./index.js",
    "editorStyle": "file:./editor.scss",
    "style": "file:./style.scss",
    "supports": {
        "html": false,
        "spacing": {
            "margin": true,
            "padding": true
        }
    },
    "attributes": {
        "fieldKey": {
            "type": "string",
            "default": ""
        },
        "fieldName": {
            "type": "string",
            "default": ""
        },
        "label": {
            "type": "string",
            "default": ""
        },
        "required": {
            "type": "boolean",
            "default": false
        },
        "helperText": {
            "type": "string",
            "default": ""
        },
        "labels": {
            "type": "string",
            "default": ""
        },
        "minValue": {
            "type": "number",
            "default": 0
        },
        "reversed": {
            "type": "boolean",
            "default": false
        },
        "scaleVariation": {
            "type": "string",
            "default": "custom"
        },
        "conditionalLogic": {
            "type": "object",
            "default": null
        },
        "className": {
            "type": "string",
            "default": ""
        },
        "useGradient": {
            "type": "boolean",
            "default": false
        },
        "gradientType": {
            "type": "string",
            "default": "improvement-right"
        },
        "gradientColorStart": {
            "type": "string",
            "default": "#f44336"
        },
        "gradientColorEnd": {
            "type": "string",
            "default": "#4caf50"
        },
        "gradientDocumentation": {
            "type": "string",
            "default": ""
        }
    },
    "example": {
        "attributes": {
            "fieldName": "wellness",
            "label": "En general, ¿qué tan satisfecho estás con tu bienestar actual?",
            "required": true,
            "helperText": "1 = Muy insatisfecho, 5 = Muy satisfecho",
            "labels": "Muy insatisfecho; Insatisfecho; Neutral; Satisfecho; Muy satisfecho",
            "minValue": 1,
            "reversed": false,
            "scaleVariation": "likert5-satisfaction"
        }
    }
}
