{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "eipsi/campo-multiple",
    "title": "EIPSI Campo Multiple",
    "category": "eipsi-forms",
    "icon": "list-view",
    "description": "Campo de selección múltiple (checkboxes) configurable para formularios EIPSI.",
    "keywords": [ "form", "field", "checkbox", "multiple", "eipsi" ],
    "textdomain": "eipsi-forms",
    "parent": [ "eipsi/form-container", "eipsi/form-page" ],
    "editorScript": "file:./index.js",
    "editorStyle": "file:./editor.scss",
    "style": "file:./style.scss",
    "supports": {
        "html": false,
        "spacing": {
            "margin": true,
            "padding": true
        }
    },
    "attributes": {
        "fieldKey": {
            "type": "string",
            "default": ""
        },
        "fieldName": {
            "type": "string",
            "default": ""
        },
        "label": {
            "type": "string",
            "default": ""
        },
        "required": {
            "type": "boolean",
            "default": false
        },
        "helperText": {
            "type": "string",
            "default": ""
        },
        "options": {
            "type": "string",
            "default": ""
        },
        "minSelections": {
            "type": "number",
            "default": 1
        },
        "maxSelections": {
            "type": "number",
            "default": 0
        },
        "layout": {
            "type": "string",
            "default": "vertical"
        },
        "conditionalLogic": {
            "type": "object",
            "default": null
        },
        "className": {
            "type": "string",
            "default": ""
        }
    },
    "example": {
        "attributes": {
            "fieldName": "symptoms",
            "label": "¿Qué síntomas experimentás?",
            "required": true,
            "helperText": "Seleccioná todos los que apliquen.",
            "options": "Ansiedad; Depresión; Insomnio; Fatiga; Dolores físicos",
            "minSelections": 1,
            "maxSelections": 5,
            "layout": "vertical"
        }
    }
}
