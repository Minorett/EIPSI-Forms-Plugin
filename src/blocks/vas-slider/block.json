{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "eipsi/vas-slider",
    "title": "EIPSI VAS Slider",
    "category": "eipsi-forms",
    "icon": "leftright",
    "description": "Visual Analog Scale (VAS) slider configurable para evaluaciones de dolor, mood, y otros constructos clínicos EIPSI.",
    "keywords": [
        "form",
        "field",
        "vas",
        "slider",
        "analog",
        "pain",
        "scale",
        "eipsi"
    ],
    "textdomain": "eipsi-forms",
    "parent": [ "eipsi/form-container", "eipsi/form-page" ],
    "editorScript": "file:./index.js",
    "editorStyle": "file:./editor.scss",
    "style": "file:./style.scss",
    "supports": {
        "html": false,
        "spacing": {
            "margin": true,
            "padding": true
        }
    },
    "attributes": {
        "fieldName": {
            "type": "string",
            "default": ""
        },
        "label": {
            "type": "string",
            "default": ""
        },
        "required": {
            "type": "boolean",
            "default": false
        },
        "helperText": {
            "type": "string",
            "default": ""
        },
        "labels": {
            "type": "string",
            "default": ""
        },
        "minValue": {
            "type": "number",
            "default": 0
        },
        "maxValue": {
            "type": "number",
            "default": 100
        },
        "step": {
            "type": "number",
            "default": 1
        },
        "initialValue": {
            "type": "number",
            "default": 50
        },
        "showValue": {
            "type": "boolean",
            "default": false
        },
        "showCurrentValue": {
            "type": "boolean",
            "default": true
        },
        "labelFontSize": {
            "type": "number",
            "default": 16
        },
        "valueFontSize": {
            "type": "number",
            "default": 36
        },
        "showLabelContainers": {
            "type": "boolean",
            "default": false
        },
        "boldLabels": {
            "type": "boolean",
            "default": true
        },
        "valuePosition": {
            "type": "string",
            "default": "above"
        },
        "labelAlignment": {
            "type": "number",
            "default": 50
        },
        "className": {
            "type": "string",
            "default": ""
        },
        "useGradient": {
            "type": "boolean",
            "default": false
        },
        "gradientType": {
            "type": "string",
            "default": "improvement-right"
        },
        "gradientColorStart": {
            "type": "string",
            "default": "#f44336"
        },
        "gradientColorEnd": {
            "type": "string",
            "default": "#4caf50"
        },
        "gradientDocumentation": {
            "type": "string",
            "default": ""
        },
        "conditionalLogic": {
            "type": "object",
            "default": {
                "enabled": false,
                "rules": [],
                "type": "all"
            }
        }
    },
    "example": {
        "attributes": {
            "fieldName": "pain_level",
            "label": "Nivel de Dolor",
            "required": true,
            "helperText": "Arrastrá el marcador para indicar tu nivel de dolor actual.",
            "labels": "Ningún dolor;Máximo dolor",
            "minValue": 0,
            "maxValue": 100,
            "step": 1,
            "initialValue": 50,
            "showCurrentValue": true
        }
    }
}
