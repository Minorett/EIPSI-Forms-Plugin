{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "eipsi/form-page",
    "title": "EIPSI Página de Formulario",
    "category": "eipsi-forms",
    "icon": "admin-page",
    "description": "Página individual dentro de un formulario multipágina EIPSI. Permite organizar campos en secciones lógicas.",
    "keywords": [ "form", "page", "section", "multipage", "eipsi" ],
    "textdomain": "eipsi-forms",
    "parent": [ "eipsi/form-container" ],
    "editorScript": "file:./index.js",
    "editorStyle": "file:./editor.scss",
    "style": "file:./style.scss",
    "supports": {
        "html": false,
        "spacing": {
            "margin": true,
            "padding": true
        }
    },
    "attributes": {
        "title": {
            "type": "string",
            "default": ""
        },
        "pageIndex": {
            "type": "number",
            "default": 1
        },
        "pageType": {
            "type": "string",
            "default": "standard"
        },
        "enableRestartButton": {
            "type": "boolean",
            "default": false
        },
        "restartButtonLabel": {
            "type": "string",
            "default": ""
        },
        "className": {
            "type": "string",
            "default": ""
        }
    },
    "example": {
        "attributes": {
            "title": "Información Personal",
            "pageIndex": 1,
            "pageType": "standard",
            "enableRestartButton": false,
            "restartButtonLabel": ""
        }
    }
}
