{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "eipsi/randomization",
  "version": "1.0.0",
  "title": " Aleatorizaci贸n de Formularios",
  "category": "eipsi-forms",
  "icon": "randomize",
  "description": "Asigna formularios aleatoriamente a participantes con configuraci贸n flexible y generaci贸n autom谩tica de shortcode/link",
  "keywords": [ "random", "assignment", "forms", "clinical", "aleatorizaci贸n", "estudio" ],
  "textdomain": "eipsi-forms",
  "editorScript": "file:../../build/index.js",
  "editorStyle": "file:../../build/index.css",
  "style": "file:../../build/style-index.css",
  "supports": {
    "html": false,
    "align": [ "wide", "full" ],
    "spacing": {
      "margin": true,
      "padding": true
    },
    "reusable": false
  },
  "attributes": {
    "enabled": {
      "type": "boolean",
      "default": false
    },
    "shortcodesInput": {
      "type": "string",
      "default": ""
    },
    "formulariosDetectados": {
      "type": "array",
      "default": [],
      "items": {
        "type": "object"
      }
    },
    "probabilidades": {
      "type": "object",
      "default": {}
    },
    "metodo": {
      "type": "string",
      "enum": [ "seeded", "pure-random" ],
      "default": "pure-random"
    },
    "seed": {
      "type": "string",
      "default": ""
    },
    "permitirOverride": {
      "type": "boolean",
      "default": true
    },
    "registrarAsignaciones": {
      "type": "boolean",
      "default": true
    },
    "configId": {
      "type": "string",
      "default": ""
    },
    "generatedShortcode": {
      "type": "string",
      "default": ""
    }
  },
  "example": {
    "attributes": {
      "enabled": true,
      "shortcodesInput": "[eipsi_form id=\"123\"]\n[eipsi_form id=\"456\"]",
      "formulariosDetectados": [
        {
          "id": "123",
          "shortcode": "[eipsi_form id=\"123\"]",
          "name": "PHQ-9 Standard",
          "exists": true
        },
        {
          "id": "456",
          "shortcode": "[eipsi_form id=\"456\"]",
          "name": "PHQ-9 Modificado",
          "exists": true
        }
      ],
      "probabilidades": {
        "123": 50,
        "456": 50
      },
      "metodo": "pure-random"
    }
  }
}
