{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "vas-dinamico/campo-descripcion",
	"version": "1.0.0",
	"title": "EIPSI Campo Descripción",
	"category": "eipsi-forms",
	"icon": "info",
	"description": "Texto informativo dentro del formulario EIPSI sin campo de entrada.",
	"keywords": [ "form", "field", "description", "eipsi" ],
	"textdomain": "vas-dinamico-forms",
	"parent": [ "vas-dinamico/form-container", "vas-dinamico/form-page" ],
	"editorScript": "file:../../build/index.js",
	"editorStyle": "file:../../build/index.css",
	"style": "file:../../build/style-index.css",
	"supports": {
		"html": false,
		"spacing": {
			"margin": true,
			"padding": true
		}
	},
	"attributes": {
		"fieldName": {
			"type": "string",
			"default": ""
		},
		"label": {
			"type": "string",
			"default": ""
		},
		"required": {
			"type": "boolean",
			"default": false
		},
		"placeholder": {
			"type": "string",
			"default": ""
		},
		"helperText": {
			"type": "string",
			"default": ""
		},
		"className": {
			"type": "string",
			"default": ""
		}
	},
	"example": {
		"attributes": {
			"label": "Importante",
			"helperText": "Por favor, lee atentamente las instrucciones antes de continuar.",
			"placeholder": "Esta información se mostrará sin campos de entrada."
		}
	}
}
